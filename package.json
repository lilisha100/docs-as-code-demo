{
  "name": "my-project-docs",
  "version": "1.0.0",
  "scripts": {
    "docfx": "npm-watch build_serve",
    "build_serve": "mono docfx.console.2.59.2/tools/docfx.exe docs/docfx.json --serve"
  },
  "watch": {
    "build_serve": {
      "patterns": [
        "templates/**/*",
        "api/**/*",
        "articles/**/*",
        "./*.md"
      ],
      "extensions": "md,yml,css,partial",
      "quiet": true,
      "legacyWatch": true,
      "delay": 500,
      "runOnChangeOnly": false
    }
  },
  "devDependencies": {
    "npm-watch": "^0.11.0"
  },
  "dependencies": {
    "cross-env": "^7.0.3",
    "nuget": "^2.0.2"
  }
}
